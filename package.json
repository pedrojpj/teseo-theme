{
   "name": "teseo-theme",
   "version": "0.0.0-development",
   "description": "",
   "main": "index.js",
   "scripts": {
      "build": "npm run build:sass && npm run build:postcss",
      "build:postcss": "postcss dist/*.css -d dist/",
      "build:sass": "node-sass --include:path scss src/theme.scss dist/teseo-theme.css",
      "lint": "sass-lint 'src/**/*.scss' -v -q",
      "test": "yarn lint",
      "semantic-release": "semantic-release pre && npm publish && semantic-release post"
   },
   "sasslintConfig": "sass-lint.yml",
   "repository": {
      "type": "git",
      "url": "https://github.com/pjpenast/teseo-theme.git"
   },
   "author": "",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/pjpenast/teseo-theme/issues"
   },
   "homepage": "https://github.com/pjpenast/teseo-theme#readme",
   "devDependencies": {
      "cssnano": "3.10.0",
      "cz-conventional-changelog": "2.0.0",
      "node-sass": "4.5.3",
      "postcss": "6.0.11",
      "postcss-cli": "4.1.1",
      "postcss-cssnext": "3.0.2",
      "postcss-import": "11.0.0",
      "sass-lint": "1.11.1",
      "semantic-release": "8.0.3"
   },
   "config": {
      "commitizen": {
         "path": "./node_modules/cz-conventional-changelog"
      }
   },
   "dependencies": {
      "sanitize.css": "^5.0.0"
   }
}
